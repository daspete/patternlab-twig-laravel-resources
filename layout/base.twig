<!doctype html>
<html lang="{%block lang %}de{% endblock %}" class="no-js {{html_class}} {{ fontsLoaded ? 'fonts-loaded' : '' }}">

<head>
    <meta charset="{% block charset %}utf-8{% endblock %}">
    <meta http-equiv="x-ua-compatible" content="ie=edge">

    {# Metadata #}
    <title>{% block title %}Title - Blueprint{% endblock %}</title>

    {% if not disable_seo %}
        <meta name="description" content="{% block description %}{% endblock %}">

        {# Facebook Metadata #}
        <meta property="og:type" content="website">
        <meta property="og:url" content="{% block url %}{% endblock %}">
        <meta property="og:image" content="{% block image %}{% endblock %}">
        <meta property="og:title" content="{{ block('title') }}">
        <meta property="og:description" content="{{ block('description') }}">
        {# OPTIONAL: declare either one or more fb:admins OR one fb:app_id #}
        <meta property="fb:admins" content="">
        <meta property="fb:app_id" content="">

        <meta name="twitter:card" content="summary"> {# photo or video #}
        <meta name="twitter:url" content="{{ block('url') }}">
        <meta name="twitter:image" content="{{ block('image') }}">
        <meta name="twitter:title" content="{{ block('title') }}">
        <meta name="twitter:description" content="{{ block('description') }}">
        {# OPTIONAL: content must be @twitterUserName #}
        <meta name="twitter:site" content="">
        <meta name="twitter:creator" content="">
        {# NOTE: photo or video cards have different values too #}
    {% endif %}

    {# Favicons #}
    {% if not disable_favicons %}
        {% include 'partials/_favicons.twig' %}
    {% endif %}

    {# Mobile viewport optimization #}
    <meta name="HandheldFriendly" content="True">
    <meta name="MobileOptimized" content="320"> {# width of 320px #}
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">

    {# ============================ Pagination hints =================================== #}
    {# Define URLs for content available through multiple URL structures or syndication:
        https://support.google.com/webmasters/answer/139066 #}
    {# <link rel="canonical" href=""> #}

    {# Define the next and|or previous page if thex exist:
        http://www.w3.org/TR/html401/struct/links.html#h-12.1.2 #}
    {# <link rel="next" href=""> #}
    {# <link rel="prev" href=""> #}

    {# ============================= Ressource hints =================================== #}
    {# For more infos what each hint exactly does have a look at the specification:
        https://w3c.github.io/resource-hints/ #}

    {# prefetch or -connect to extern domains #}
    <link rel="dns-prefetch" href="//google-analytics.com/">
    <link rel="preconnect"   href="//api.social-app.at/">

    {# prefetch or -render links which could be used by the next navigation #}
    {# <link rel="prefetch"  href="/blog/my-newest-blog-article"> #}
    {# <link rel="prerender" href="/signup.html"> #}

    {# ==================================== Styles ===================================== #}
    {# Safari #}
    {# <meta name="format-detection" content="telephone=no"> #}
    {# <meta name="format-detection" content="address=no"> #}

    {# BlackBerry #}
    {# <meta http-equiv="x-rim-auto-match" content="none"> #}

    {# App like Style for Safari #}
    {# <meta name="apple-mobile-web-app-capable"          content="yes"> #}
    {# <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent"> #}

    {# Style adress bar of Chrome #}
    {# <meta name="theme-color" content="#000000"> #}

    {# CSS Files #}
    <link rel="stylesheet" href="{{ version('assets/css/app.css') }}">
    <link rel="stylesheet" href="{{ version('assets/css/print.css') }}" media="print">

    {# ============================== Pre Render JavaScript ============================= #}
    <script src="{{ version('assets/js/critical.js') }}"></script>

    {# =============================== Add Additional Code ============================== #}
    {% block head %}{% endblock %}
</head>

<body class="{{body_class}}">
    {# ================================ Browser Alerts ================================== #}
    {% include 'molecules-activate-javascript' %}
    {% include 'molecules-activate-cookies' %}
    {% include 'molecules-old-browser' %}
    {% include 'molecules-cookie-info' %}

    <div class="off-canvas-wrapper">
        <div class="off-canvas-wrapper-inner" data-off-canvas-wrapper>
            <div class="off-canvas-content" data-off-canvas-content>
                {# =========================== Scroll Up ================================ #}
                <a class="scroll-up" href="#top"></a>

                {# =========================== Website ================================== #}
                {# YOUR HTML GOES HERE #}

                {% block website %}
                    <h1>Hello World!</h1>
                    <p>Place your content here!</p>
                {% endblock %}

            </div>
        </div>
    </div>


    {# =============================== Google Analytics ================================= #}
    <script>/* eslint-disable */
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-xxxxxxx-x', {
            cookieDomain: 'auto',
            userId: 0
        });
        ga('set',  'forceSSL',    true);
        ga('set',  'anonymizeIp', true);
        ga('send', 'pageview');
    /* eslint-enable */</script>

    {# ================================ JavaScripts ==================================== #}
    <script src="{{ version('assets/js/app.js') }}"></script>

    {# ============================ Add Additional Code ================================ #}
    {% block foot %}{% endblock %}
</body>

</html>
